<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title>
      <% if current_page.data.title %> <%= current_page.data.title %> - Gurudayal Khalsa
      <% else %> Gurudayal Khalsa - Toronto Travel Photographer <% end %>
    </title>

    <meta name="description" content="">
    <meta name="author" content="">

    <%= favicon_tag 'images/favicon.png' %>
    <%= stylesheet_link_tag "//fonts.googleapis.com/css?family=Raleway:400,300,600" %>
    <%= stylesheet_link_tag "normalize", "skeleton", "main" %>
  </head>

  <body class="<%= page_classes %>">
    <div class="container">
      <%= partial "/layouts/partials/page_header" %>
      <div class="page-content"><%= yield %></div>
      <%= partial "/layouts/partials/page_footer" %>
    </div>
    <%= javascript_include_tag "blazy.min", "main" %>
  </body>
</html>
